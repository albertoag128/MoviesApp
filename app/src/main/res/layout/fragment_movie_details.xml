<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/body_padding"
    android:layout_height="match_parent"
    android:id="@+id/movie_detail">

    <TextView
        android:id="@+id/detail_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/feed_title_size"
        tools:text="Avengers: Endgame"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/detail_movie_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/film_title_size"
        android:layout_marginTop="@dimen/general_item_margin"
        tools:text="Action, Adventure, Fantasy, Sci-Fi"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_title"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/detail_movie_plot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_item_margin"
        android:textSize="@dimen/year_title_size"
        tools:text="After the devastating events of Avengers: Infinity War (2018), the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to undo Thanos' actions and restore order to the universe."
        app:layout_constraintTop_toBottomOf="@id/detail_movie_genre"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="textStart"
        />

    <TextView
        android:id="@+id/detail_movie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/year_title_size"
        android:layout_marginTop="@dimen/general_item_margin"
        tools:text="2018"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_plot"
        app:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/detail_movie_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/year_title_size"
        android:layout_marginTop="@dimen/general_item_margin"
        tools:text="2.9"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_plot"
        app:layout_constraintEnd_toStartOf="@id/star"
        />

    <ImageView
        android:id="@+id/star"
        android:layout_width="@dimen/icon_star_detail_resolution"
        android:layout_height="@dimen/icon_star_detail_resolution"
        android:src="@drawable/star"
        android:layout_marginTop="@dimen/general_item_margin"
        app:layout_constraintTop_toBottomOf="@id/detail_movie_plot"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>