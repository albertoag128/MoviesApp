<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/body_padding"
    android:background="@drawable/background_gradient"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/logo_resolution"
        android:layout_height="@dimen/logo_resolution"
        android:src="@drawable/icon"
        android:layout_marginStart="@dimen/logo_margin_left"
        app:layout_constraintStart_toStartOf="@+id/feed_list_recycler_view"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_feed_title"
        android:textSize="@dimen/feed_title_size"
        android:layout_marginEnd="@dimen/title_margin_right"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/feed_list_recycler_view"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/feed_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recycler_margin_top"
        tools:listitem="@layout/activity_movies_item_list"
        app:layout_constraintTop_toBottomOf="@id/logo"/>

</androidx.constraintlayout.widget.ConstraintLayout>