<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movies_feed">

    <fragment
        android:id="@+id/movies_feed"
        android:name="com.example.moviesapp.presentation.MoviesFeedFragment"
        android:label="@string/app_feed_title">

         <action
            android:id="@+id/action_moviesfeed_to_moviedetail"
            app:destination="@id/movieDetail" />

    </fragment>

    <fragment
        android:id="@+id/movieDetail"
        android:name="com.example.moviesapp.presentation.MovieDetailFragment"
        android:label="@string/app_detail_title">

        <argument
            android:name="key_movie"
            app:argType="string"/>

    </fragment>

</navigation>
